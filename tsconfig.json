{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    // "declaration": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    // "resolveJsonModule": true,
    // "strict": true,
    "typeRoots": ["typings"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "typings/*"]
}
